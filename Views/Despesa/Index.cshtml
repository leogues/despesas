@model IEnumerable<Despesas.Models.Despesa>

@{
    Layout = "_LayoutDashboard";
}

<a asp-action="Create">
    <Button type='button' class='btn-default rounded px-4 border-0 text-white hover-shadow float-right'>
        Criar novo
    </Button>
</a>
<div class="table-home mt-5">

    <table >
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Alterar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Visualizar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

